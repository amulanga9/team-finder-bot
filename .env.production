# ═══════════════════════════════════════════════════════════
# PRODUCTION ENVIRONMENT CONFIGURATION FOR AWS EC2
# ═══════════════════════════════════════════════════════════
#
# ВАЖНО: Скопируйте этот файл в .env и заполните реальными значениями!
#
# cp .env.production .env
# nano .env
#
# ═══════════════════════════════════════════════════════════

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 1. TELEGRAM BOT CONFIGURATION
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Получите токен у @BotFather в Telegram
BOT_TOKEN=your_bot_token_here

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 2. DATABASE CONFIGURATION
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Для AWS EC2 с локальным PostgreSQL используйте localhost
DB_HOST=localhost
DB_PORT=5432
DB_NAME=teammates_bot
DB_USER=postgres
DB_PASSWORD=your_strong_password_here

# Альтернатива: полный DATABASE_URL (если указан, переопределяет DB_*)
# DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/teammates_bot

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 3. APPLICATION SETTINGS
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
DEBUG=False
LOG_LEVEL=INFO
LOG_TO_FILE=True
LOG_FILE_PATH=logs/bot.log

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 4. ADMIN PANEL SETTINGS
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Порт для админки (обычно 80 или 5000)
ADMIN_PORT=5000

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 5. RATE LIMITING
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
RATE_LIMIT_DAILY_INVITATIONS=5
RATE_LIMIT_REQUESTS_PER_MINUTE=20

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 6. CLEANUP SETTINGS
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
CLEANUP_EXPIRED_INVITATIONS_HOURS=72
CLEANUP_INACTIVE_USERS_DAYS=30
CLEANUP_INTERVAL_MINUTES=60
